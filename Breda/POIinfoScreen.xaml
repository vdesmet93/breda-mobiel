<tk:ChildWindow x:Class="View.POIinfoScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tk="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
     mc:Ignorable="d"
                Title="Informatie Scherm"
                FontFamily="{StaticResource PhoneFontFamilyNormal}"
                FontSize="{StaticResource PhoneFontSizeNormal}"
                Foreground="{StaticResource PhoneForegroundBrush}"
                Height="247"
                Width="296"
                OverlayBrush="#7F000000"
                BorderBrush="Black"
                BorderThickness="2"
                >

    <Grid x:Name="LayoutRoot"
        Background="{StaticResource PhoneChromeBrush}">
        <TextBlock Text="POI info, bla bla bla bala blabalbalblal"
               TextWrapping="Wrap" />
        <Button Content="Close"
            x:Name="closeButton"
            VerticalAlignment="Bottom"
            d:LayoutOverrides="Width"
            HorizontalAlignment="Right" Click="closeButton_Click" />

    </Grid>

</tk:ChildWindow>